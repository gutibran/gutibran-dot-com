---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Blog"
const allBlogPosts = await Astro.glob("./blog/*.mdx")
---
<style>
    ul {
        list-style: square;
        display: flex;
        flex-direction: column;
        gap: 0.333em;
    }
    
    ul li a {
        color: black;
    }
</style>
<BaseLayout pageTitle={pageTitle}>
    <h1>{pageTitle}</h1>
    <p>Share knowledge and thoughts.</p>
    <ul>
        {allBlogPosts.map((post) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
    </ul>
</BaseLayout>