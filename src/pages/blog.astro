---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "Blog"
const allBlogPosts = await Astro.glob("./blog/*.mdx")
const description = "The blog index of Brandon Gutierrez's website. A complete listing of all blog posts written by Brandon Gutierrez."
---
<style>
    ul {
        list-style: square;
        display: flex;
        flex-direction: column;
        gap: 0.333em;
    }
    
    ul li a {
        color: black;
    }
</style>
<BaseLayout pageTitle={pageTitle} description={description}>
    <h1>{pageTitle}</h1>
    <p>Share knowledge and thoughts.</p>
    <ul>
        {allBlogPosts.map((post) => post.frontmatter.draft === false ? <li><a href={post.url}>{post.frontmatter.title}</a></li> : null)}
    </ul>
</BaseLayout>